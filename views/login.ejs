<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <style>
      /* Page and color scheme */
      body {
        margin: 0;
        padding: 0;
        background-color: #f9f7f7; /* Light background */
        font-family: Arial, sans-serif;
      }

      /* Container for the login form */
      .login-container {
        width: 350px;
        margin: 80px auto;
        background-color: #ffffff; /* White box over the off-white background */
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
      }

      .login-container h2 {
        text-align: center;
        color: #8487f3; /* Accent color */
        margin-bottom: 20px;
      }

      /* Form groups and labels */
      .form-group {
        margin-bottom: 15px;
      }

      .form-group label {
        display: block;
        margin-bottom: 5px;
        color: #333;
        font-weight: bold;
      }

      .form-group input {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 14px;
        outline: none;
      }

      /* Submit button style */
      .btn-submit {
        width: 100%;
        background-color: #8487f3;
        color: #ffffff;
        border: none;
        padding: 10px 0;
        font-size: 16px;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .btn-submit:hover {
        background-color: #767be0; /* Slightly darker on hover */
      }

      .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
      }

      .extra-links {
        text-align: center;
        margin-top: 15px;
      }
      .extra-links a {
        color: #8487f3;
        text-decoration: none;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <h2>Login</h2>

      <!-- 
      Action points to the POST route where you handle login logic.
      Example: "/auth/login"
    -->
      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter your password"
            required
          />
        </div>

        <button type="submit" class="btn-submit">Sign In</button>

        <!-- Optional: Display error from server-side if login fails -->
        <% if (typeof error !== 'undefined') { %>
        <p class="error-message"><%= error %></p>
        <% } %>
      </form>

      <div class="extra-links">
        <!-- Link to register page -->
        <p>Don't have an account? <a href="/register">Register here</a></p>
      </div>
    </div>
  </body>
</html>
